/* Основной стиль для QMenu */
QMenu {
    background-color: #ffffff; /* Фон меню */
    color: #000000; /* Цвет текста */
    border: 1px solid #cfcfcf; /* Граница меню */
    border-radius: 8px; /* Закругленные углы */
    padding: 5px; /* Внутренний отступ */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.0); /* Тень */
}

/* Стиль для элементов меню */
QMenu::item {
    background-color: transparent; /* Прозрачный фон по умолчанию */
    padding: 8px 20px; /* Внутренние отступы элементов */
    margin: 2px 0; /* Внешние отступы элементов */
}

/* Стиль для выделенного элемента */
QMenu::item:selected {
    background-color: #e5e5e5; /* Фон выделенного элемента */
    color: #000000; /* Цвет текста выделенного элемента */
    border-radius: 4px; /* Закругленные углы выделенного элемента */
}

/* Стиль для разделителя */
QMenu::separator {
    height: 1px; /* Высота разделителя */
    background-color: #e5e5e5; /* Цвет разделителя */
    margin: 5px 10px; /* Отступы для разделителя */
}

/* Стиль для подменю */
QMenu::indicator {
    width: 16px; /* Ширина индикатора подменю */
    height: 16px; /* Высота индикатора подменю */
}

QMenu::indicator:checked {
    image: url(:/path/to/checked_icon.png); /* Иконка для выделенного подменю */
}

QMenu::indicator:unchecked {
    image: url(:/path/to/unchecked_icon.png); /* Иконка для неввыделенного подменю */
}

/* Стиль для подменю (указатель) */
QMenu::right-arrow {
    image: url(:/path/to/right_arrow_icon.png); /* Иконка для указателя подменю */
}
